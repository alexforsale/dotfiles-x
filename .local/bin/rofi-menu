#!/bin/sh

case ${DESKTOP_SESSION} in
    qtile)
        rofi -no-lazy-grab -show drun \
            -display-drun "Applications :" -drun-display-format "{name}" \
            -theme themes/qtile.rasi
        ;;
    i3)
        # i3 set polybar top
        rofi -no-lazy-grab -show drun \
            -display-drun "Applications :" -drun-display-format "{name}" \
            -theme themes/current.rasi
        ;;
    openbox)
        # Launch Rofi
        rofi -no-lazy-grab -show drun \
            -display-drun "Applications :" -drun-display-format "{name}" \
            -theme themes/current.rasi
        ;;
    stumpwm)
        rofi -no-lazy-grab -show drun \
            -display-drun "Applications :" -drun-display-format "{name}" \
            -theme themes/stump.rasi
        ;;
esac
